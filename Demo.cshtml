    <script>
        // Theme toggle fixed
        const modeBtn = document.getElementById("mode");
        if (localStorage.getItem("theme") === "light") { document.body.classList.add("dark"); modeBtn.textContent = "🌙"; }
        else { document.body.classList.remove("dark"); modeBtn.textContent = "☀️"; }
        modeBtn.addEventListener("click", () => {
            document.body.classList.toggle("dark");
            const isDark = document.body.classList.contains("dark");
            modeBtn.textContent = isDark ? "🌙" : "☀️";
            localStorage.setItem("theme", isDark ? "light" : "dark");
        });

        // Fade animation
        const fadeEls = document.querySelectorAll(".fadeIn");
        const io = new IntersectionObserver(entries => entries.forEach(e => {
            if (e.isIntersecting) { e.target.classList.add("show"); io.unobserve(e.target); }
        }), { threshold: .1 });
        fadeEls.forEach(el => io.observe(el));

        // Typewriter loop
        const roles = ["Full Stack .NET Developer", "Mobile App Engineer", ".NET MAUI Specialist", "Azure Cloud Architect", "Tech Innovator"];
        let index = 0, charIndex = 0, deleting = false;
        const typeEl = document.getElementById("typewriter");
        function type() {
            const text = roles[index];
            if (!deleting) { typeEl.textContent = text.substring(0, ++charIndex); }
            else { typeEl.textContent = text.substring(0, --charIndex); }
            if (!deleting && charIndex === text.length) { setTimeout(() => deleting = true, 1000); }
            else if (deleting && charIndex === 0) { deleting = false; index = (index + 1) % roles.length; }
            setTimeout(type, deleting ? 60 : 100);
        }
        type();
    </script>
